# Cache settings
CACHE_DIR=.cache
CACHE_FILE=cache.db
CACHE_MAX_SIZE=5000
CACHE_TTL=300.0

# Redis settings
USE_REDIS=false
REDIS_URL=redis://localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# Retry settings
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# Environment: dev, test, prod
ENV=dev

# Disk usage monitoring
DISK_USAGE_MONITORING=true
DISK_USAGE_THRESHOLD=75.0
DISK_CRITICAL_THRESHOLD=90.0
DISK_CHECK_INTERVAL=3600
DISK_RETENTION_DAYS=30

# Compression settings
ENABLE_COMPRESSION=true
COMPRESSION_MIN_SIZE=1024
COMPRESSION_LEVEL=6
